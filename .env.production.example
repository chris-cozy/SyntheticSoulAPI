# Core runtime
APP_ENV=production
PORT=8000
BOT_NAME=jasmine
MODE=lite
DEBUG_MODE=false

# Reverse proxy (Caddy)
# Set this to your public API domain, for example:
# API_DOMAIN=api.example.com
API_DOMAIN=api.example.com

# Database
DATABASE_NAME=synthetic_soul
MONGO_MODE=hosted
MONGO_CONNECTION_HOSTED=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority
# If using local Mongo in docker-compose.yml, these can stay as defaults:
# MONGO_MODE=local
# MONGO_CONNECTION_LOCAL=mongodb://mongo:27017

# Queue / Redis
# If using local Redis in docker-compose.yml, this should stay:
REDIS_URL=redis://redis:6379/0

# LLM provider
LLM_MODE=hosted
OPENAI_API_KEY=replace_me
GPT_FAST_MODEL=gpt-4o-mini
GPT_QUALITY_MODEL=gpt-5-mini

# Local LLM mode (optional)
OLLAMA_BASE_URL=http://host.docker.internal:11434/v1
OLLAMA_API_KEY=ollama
OLLAMA_FAST_MODEL=qwen2.5:7b
OLLAMA_QUALITY_MODEL=qwen2.5:14b

# Security (MUST be strong random secrets in production)
JWT_SECRET_ENV=replace_with_long_random_secret_min_32_chars
ARGON2_PEPPER_ENV=replace_with_long_random_pepper_min_16_chars

# Frontend origin for CORS
WEB_UI_DOMAIN=https://your-frontend.example

# Optional auth/session tuning
ACCESS_TTL_MIN=15
REFRESH_TTL_DAYS=90

# Optional background tuning
THINKING_RATE_SECONDS=900
EMOTIONAL_DECAY_RATE_SECONDS=240

# Worker mode (Linux servers should use fork worker)
RQ_USE_FORK_WORKER=true
